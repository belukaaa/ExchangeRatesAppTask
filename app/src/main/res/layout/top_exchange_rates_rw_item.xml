<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_margin="15dp"
        android:id="@+id/name_of_rate"
        android:text="GEL"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:text="0.0"
        android:textSize="24sp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:id="@+id/value_of_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/name_of_rate"
        app:layout_constraintTop_toTopOf="@id/name_of_rate"
        app:layout_constraintBottom_toBottomOf="@id/name_of_rate"/>

    <ImageView
        android:layout_marginEnd="15dp"
        android:id="@+id/favourites_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/unfavourite_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>